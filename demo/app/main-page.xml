<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page">
  <StackLayout horizontalAlignment="center">
    <Label class="title" text="Tap the button to log in" textWrap="true" textAlignment="center"/>
    <Button horizontalAlignment="center" text="Log in" tap="{{ onLogin }}"/>
    <Button horizontalAlignment="center" text="Get token" tap="{{ onToken }}"/>
  </StackLayout>
</Page>